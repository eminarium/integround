<div class="col-lg-4 col-md-6 m-8 p-2">
  <div class="card" style="height: 16rem">
    <div class="card-image">
    </div>
    <div class="card-body d-flex flex-column">
      <a href="" style="text-decoration: none; color: black">
        <h5 class="card-title mb-3"><%= product.name %></h5>
      </a>    
      <h5 class="card-subtitle mb-2 text-muted"><%= product.category.name %></h5>

      <p class="card-text"><%= product.description %></p>
      <div class="mt-auto">
        <%= link_to "Add To Basket", product, data: { turbo_frame: "_top" }, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div>