<p style="color: green"><%= notice %></p>

<div class="row">
  <div class="col">
    <h1 class="display-6">Products</h1>
  </div>
  <div class="col-auto">
    <%= link_to "New Product", new_product_path, class: "btn btn-primary", data: { turbo_frame: "modal" } %>
  </div>
</div>

<ul class="list-group">
  <%= turbo_frame_tag "products" do %>
    <% if @products.blank? %>
      <h1 class="display-6">No Products to list yet...</h1>
    <% end %>
    <%= render @products %>
  <% end %>
</ul>