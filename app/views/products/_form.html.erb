<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :name, class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div>
    <%= form.label :category_id, class: "form-label" %>
    <%= form.collection_select :category_id, @categories, :id, :name, { include_blank: "No Category" }, { class: "form-select" } %>
  </div>

  <div>
    <%= form.label :price, class: "form-label" %>
    <%= form.text_field :price, class: "form-control" %>
  </div>

  <div>
    <%= form.label :description, class: "form-label" %>
    <%= form.text_area :description, class: "form-control" %>
  </div>

  <div class="mt-3">
    <%= form.button type: :submit, class: "btn btn-primary" %>
    <%= link_to "Cancel", products_path, data: { turbo_frame: "_top" }, class: "btn btn-warning"  %>
  </div>
<% end %>
