<%= turbo_frame_tag category do %>
  <li class="list-group-item">
    <div class="row mt-2">

      <span class="col-md-2 col-sm-12">
        <strong><%= category.name %></strong>
      </span>

      <span class="col-md col-sm-12 mb-3">
        <%= category.description %>
      </span>

      <span class="col-auto mb-2">
        <%= link_to "Show", category, data: { turbo_frame: "_top" }, class: "btn btn-secondary" %>
        <%= link_to "Delete", category, class: "btn btn-danger", method: :delete, data: { "turbo-method": :delete, turbo_confirm: "Are you sure?" } %>
        <%= link_to "Edit", edit_category_path(category), data: { turbo_frame: "modal" }, class: "btn btn-success" %>
      </span>

    </div>
  </li>
<% end %>